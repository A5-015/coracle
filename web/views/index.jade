extends layout

block content
  
  div.container
    div.jumbotron
      h1 Coracle
    ul.nav.nav-tabs(role='tablist')
      li.active(role='presentation')
        a(href='#settingsTabContent', role='tab',data-toggle='tab')#settingsTab Settings
      li(role='presentation')
        a(href='#resultsTabContent', role='tab',data-toggle='tab')#resultsTab Results
      li(role='presentation')
        a(href='#traceTabContent', role='tab',data-toggle='tab')#traceTab Trace
        
            
    div.modal.fade#networkSettingsModal
      div.modal-dialog
        div.modal-content
          div.modal-header
            button.close(type='buton', data-dismiss='modal') &times;
            ul.nav.nav-tabs(role='tablist')
              li.active(role='presentation')
                a(href='#settingsModalTabContent', role='tab',data-toggle='tab')#settingsModalTab Settings
              li(role='presentation')
                a(href='#networkModalTabContent', role='tab',data-toggle='tab')#networkModalTab Network
            
          div.modal-body
            div.tab-content
              div.tab-pane.active#settingsModalTabContent(role='tabpanel')
                include networkSettings
                    
              div.tab-pane#networkModalTabContent(role='tabpanel')
                include networkView

          div.modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            a.btn.btn-primary(href='#networkModalTabContent', role='tab',data-toggle='tab')#SettingsNextButton Next
            a.btn.btn-primary.hidden#SettingsSaveButton Save
    
    div.tab-content
      div.tab-pane.active#settingsTabContent(role='tabpanel')
        div.row
          div.list-group.col-md-8#runSettingsList
            
          div.btn-group-vertical.col-md-4
            button.btn.btn-default.btn-primary#addConfigButton Add
            button.btn.btn-default.btn-primary#editSettingsButton Edit
            button.btn.btn-default.btn-danger#removeConfigButton Remove
        form
          //div.form-group#nodesDiv
            //label.control-label(for='numNodes') Nodes:
              //input.form-control#numNodes(type='number', min='2', max='20',step='1',value='2')
          //div.form-group#lossDiv
            //label.control-label(for='lossSlider') Loss:
            //div
              //span(style={'padding-right':'15px'}) 0
              //input.form-control#lossSlider(data-slider-min="0" data-slider-max="1" data-slider-step="0.1" data-slider-value="0.1")
              //span(style={'padding-left':'15px'}) 1
              
          //div.form-group#openNetworkViewButton
          //  button.btn.btn-info.btn-s(type='button',data-toggle='modal',data-target='#networkSettingsModal') Configure Network    
          
          button.btn.btn-primary#runSim Run Simulation    

      div.tab-pane#resultsTabContent(role='tabpanel')
        div.panel.panel-default.hidden#resultsPanel
          div.panel-heading Results
          div#SimResults
          div#graphs
          //svg#Graph1(width = 500, height=500)
          
      div.tab-pane#traceTabContent(role='tabpanel')
        div.panel.panel-default.hidden#tracePanel
          div.panel-heading Trace
          div#TraceResults
  
